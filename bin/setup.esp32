#!/bin/bash

[ -d esp-idf ] && cd esp-idf
[ ! -d esp-idf ] git clone -b v5.0.2 --recursive https://github.com/espressif/esp-idf.git

echo "$(basename $(pwd))"
[ $(basename $(pwd)) == esp-idf ] && echo "Right where we belong" >&2
[ $(basename $(pwd)) != esp-idf ] && cd esp-idf
exit
IDF_PATH=$(pwd)
IDF_TOOLS_PATH=$(pwd)
./install.sh esp32
. export.sh

tools/idf_tools.py install

